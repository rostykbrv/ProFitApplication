<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProFitApplication.Views.ExercisingPageView"
             Title="Exercise Page"
             xmlns:viewmodel="clr-namespace:ProFitApplication.ViewModels"
             x:DataType="viewmodel:ExercisingPageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False">
    <Grid RowDefinitions=".1*,.6*,.1*,.2*,.1*">
        <Label Grid.Row="0"
               Text="2"
               FontFamily="RubikBold"
               FontSize="24"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>
        <Image Grid.Row="1"
               Source="jumpingjack.gif"
               HorizontalOptions="Center"
               IsAnimationPlaying="True"/>
        <BoxView Grid.Row="2"
                 Color="blue"/>
        <BoxView Grid.Row="3"
                 Color="Black"/>
        <BoxView Grid.Row="4"
                 Color="Turquoise"/>
    </Grid>
</ContentPage>